                                  <?php
                                    $_objectManager =  \Magento\Framework\App\ObjectManager::getInstance();
                                    $stockItem = $_objectManager->get('\Magento\CatalogInventory\Api\StockStateInterface');
                                    $productStock = $stockItem->getStockQty($_product->getId(), $_product->getStore()->getWebsiteId());

                                    ?>

                                    <div class="in-stock">
                                    <?php //if ($_product->isSaleable()):?>
                                            <?php if ($productStock != 0) { ?>
                                            <span class="stock-status">In Stock - <?= $productStock ?> </span>
