                                $_objectManager =  \Magento\Framework\App\ObjectManager::getInstance();
                                $_availabilityStatus = $_objectManager->create('BoostMyShop\AvailabilityStatus\Model\AvailabilityStatus');
                                $_storeManager = $_objectManager->create('Magento\Store\Model\StoreManagerInterface');

                                if($_product->getTypeId() == 'simple'){
                                    $result = $_availabilityStatus->getAvailability($_product, $_storeManager->getStore()->getId());

                                    if ($result)
                                        echo $result['message'];
                                }else if($_product->getTypeId() == 'configurable'){
                                    if (!$_product->isAvailable()){
                                        $result = $_availabilityStatus->getOutOfStockMessage($_product, $_storeManager->getStore()->getId());
                                        if ($result)
                                            echo $result['message'];
                                    }
                                    else{
                                        $soonestProductId = null;
                                        $this->_availabilities = [];
                                        $childProducts = $_product->getTypeInstance()->getUsedProducts($_product);
                                        foreach($childProducts as $child)
                                        {
                                            $childAvailability = $_availabilityStatus->getAvailability($child, $_storeManager->getStore()->getId());
                                            $this->_availabilities[$child->getId()] = $childAvailability;
                                        }

                                        $availabilities = $this->_availabilities;

                                        foreach($this->_availabilities as $productId => $availability)
                                        {
                                            if (!$soonestProductId || ($availability['date'] < $availabilities($soonestProductId)['date']))
                                                $soonestProductId = $productId;
                                        }

                                        if ($soonestProductId)
                                            echo $availabilities($soonestProductId)['message'];
                                    }
                                }

                                
