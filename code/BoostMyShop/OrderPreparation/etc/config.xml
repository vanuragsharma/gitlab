<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <orderpreparation>
            <steps>
                <picking>1</picking>
                <packing>1</packing>
                <download>1</download>
            </steps>
            <batch>
                <max_order_count_in_batch_unique>100</max_order_count_in_batch_unique>
                <max_order_count_in_batch_single>100</max_order_count_in_batch_single>
                <max_order_count_in_batch_multiple>100</max_order_count_in_batch_multiple>
                <max_order_count_in_batch_all>100</max_order_count_in_batch_all>
                <unique_product_minimum_order_count>10</unique_product_minimum_order_count>
                <print_format>420:595:</print_format>
            </batch>
            <picking>
                <pdf_layout>large</pdf_layout>
                <include_global_pickinglist>1</include_global_pickinglist>
                <one_page_per_order>1</one_page_per_order>
                <sort_mode>location_name</sort_mode>
                <display_options>1</display_options>
                <print_format>595:842:</print_format>
            </picking>
            <packing>
                <create_shipment>1</create_shipment>
                <create_invoice>1</create_invoice>
                <download_invoice>1</download_invoice>
                <download_shipping_label>1</download_shipping_label>
            </packing>
            <download>
                <invoice>1</invoice>
                <shipment>1</shipment>
            </download>
            <order_editor>
                <enabled>0</enabled>
            </order_editor>
            <addresslabel>
                <label_width>10</label_width>
                <label_height>5</label_height>
                <text_size>10</text_size>
                <top_margin>0.5</top_margin>
                <left_margin>0.5</left_margin>
            </addresslabel>
            <status_mapping>
                <instock>processing</instock>
                <outofstock>processing</outofstock>
                <holded>fraud,holded,payment_review,pending,pending_payment</holded>
                <partial>processing</partial>
            </status_mapping>
        </orderpreparation>
    </default>
</config>
