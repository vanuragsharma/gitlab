<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magecomp_Emailquotepro::css/emailquote.css"/>
    </head>
    <body>
        <referenceContainer name="checkout.cart.form.before">
            <block class="Magecomp\Emailquotepro\Block\Emailquote" ifconfig="emailquote/general/enable" template="Magecomp_Emailquotepro::emailquote.phtml" name="emailquote_index"/>
        </referenceContainer>
        <referenceContainer name="checkout.cart.methods">	
        	 <block class="Magento\Checkout\Block\Onepage\Link" name="checkout.cart.methods.onepage.bottom" template="Magecomp_Emailquotepro::onepage/link.phtml" />
        </referenceContainer>
        <referenceBlock name="checkout.cart.totals.container">
	 	<block class="Magecomp\Emailquotepro\Block\Emailquote" ifconfig="emailquote/general/enable" name="custom_button" template="Magecomp_Emailquotepro::custom.phtml" />
	</referenceBlock>
    </body>
</page>
