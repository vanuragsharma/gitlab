            <resource>Yalla_Theme::app_config</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Offer Category ID</label> 
                <field id="category_id" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
		            <label>Offer Category</label>
				</field>
            </group>
        </section>

