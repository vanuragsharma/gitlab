<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="appsettings" translate="label" sortOrder="10">
            <label>App Settings</label>
        </tab>
        <section id="imageupload" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class> 
            <label>Category Square Image</label>
            <tab>appsettings</tab> 
            <resource>Yalla_Theme::app_config</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Category Square Image</label> 
                <field id="squareimage" translate="label comment" type="image" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
		            <label>Common Square Image</label>
		            <backend_model>Yalla\Theme\Model\Config\Backend\Image</backend_model>
					<base_url type="media" scope_info="1">squareimage</base_url>
				</field>
            </group>
	     <group id="general2" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>App Drawer Image</label> 
                <field id="drawerimage" translate="label comment" type="image" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
